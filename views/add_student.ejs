<!-- views/add_student.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Placement Cell - Add New Student</title>
  <!-- Include Bootstrap and other CSS files -->
</head>
<body>
  <h1>Add New Student</h1>
  <form action="/students" method="post">
    <label for="name">Name:</label>
    <input type="text" name="name" required>
    <label for="college">College:</label>
    <input type="text" name="college" required>
    <label for="status">Status:</label>
    <select name="status" required>
      <option value="placed">Placed</option>
      <option value="not_placed">Not Placed</option>
    </select>
    <label for="DSA_Final_Score">DSA Final Score:</label>
    <input type="number" name="DSA_Final_Score" required>
    <label for="WebD_Final_Score">WebD Final Score:</label>
    <input type="number" name="WebD_Final_Score" required>
    <label for="React_Final_Score">React Final Score:</label>
    <input type="number" name="React_Final_Score" required>
    <button type="submit">Add Student</button>
  </form>
</body>
</html>
